{
  "name": "BetterChat",
  "version": "1.5.0",
  "description": "Screenshot Freely, Save Media, Bypass Presence Detection and more!",
  "scripts": {
    "start": "rm -rf ./public/build/ && node ./scripts/dev.js",
    "build": "npm run build:chrome",
    "manifest-lint": "addons-linter public/",
    "lint": "eslint --ignore-pattern \"src/**/*.{ts,tsx}\" && prettier --check \"src/**/*.{ts,tsx}\"",
    "lint:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "build:chrome": "rm -rf ./public/build/ && node ./scripts/chrome.js",
    "build:firefox": "rm -rf ./public/build/ && node ./scripts/firefox.js",
    "build:userscript": "rm -rf ./public/build/ && node ./scripts/userscript.js",
    "package": "npm run package:chrome",
    "package:chrome": "rm -rf ./public/build/ && npm run build:chrome && cd ./public && zip -D -r ../better-chat-chrome.zip . && cd ..",
    "package:firefox": "rm -rf ./public/build/ && npm run build:firefox && cd ./public && zip -D -r ../better-chat-firefox.zip . && cd .."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dclstn/better-chat.git"
  },
  "author": "donnieacolston@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dclstn/better-chat/issues"
  },
  "homepage": "https://github.com/dclstn/better-chat#readme",
  "dependencies": {
    "@mantine/core": "^8.0.1",
    "@mantine/hooks": "^8.0.1",
    "@tabler/icons-react": "^3.33.0",
    "cookies-js": "^1.2.3",
    "eventemitter3": "^5.0.1",
    "fast-deep-equal": "^3.1.3",
    "fuse.js": "^7.0.0",
    "lodash.throttle": "^4.1.1",
    "preact": "^10.26.9",
    "react": "npm:@preact/compat",
    "react-dom": "npm:@preact/compat",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.29.0",
    "@types/chrome": "^0.0.326",
    "@types/lodash.throttle": "^4.1.9",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^19.0.1",
    "@types/ua-parser-js": "^0.7.39",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "addons-linter": "^7.15.0",
    "chokidar": "^4.0.3",
    "dotenv": "^17.2.0",
    "esbuild": "^0.25.5",
    "esbuild-plugin-alias": "^0.2.1",
    "esbuild-plugin-import-glob": "^0.1.1",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^16.2.0",
    "lightningcss": "^1.30.1",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "reconnecting-websocket": "^4.4.0",
    "ws": "^8.18.2"
  }
}
